<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Degree Planner</title>
    <style>
        body 
        {
            margin: 0;
            display: flex;
            flex-direction: column;
            height: 100%;
            background: linear-gradient(135deg, hwb(34 42% 33%), #648cc4); /* Gradient background */
        }

        .container 
        {
            display: flex;
            flex: 1;
            overflow: hidden;
            padding: 0%;
        }

        .sidebar 
        {
            width: 20%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.9);
            overflow-y: auto;
            background-color: rgba(0, 0, 0, 0.731); 
            display: flex;
            margin-top: 3%;
            margin-bottom: 3%;
            border: 5px solid #605b5b00;
            border-radius: 10px;
        }

        .sidebar input[type="text"] 
        {
            width: 90%;
            margin: 10px;
            padding: 5px;
            background-color: rgb(0, 0, 0); 
        }

        .main /* holds the years */
        {
            display: flex;
            flex: 1;
            padding: 3%;
            overflow-x: auto;
        }

        .year 
        {
            flex: 1;
            display: flex;
            flex-direction: column;
            background-color: rgba(0, 0, 0, 0.731); 
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.9);
            margin: 1%;
            border: 5px solid #605b5b00;
            border-radius: 9px;
        }

        .year h3 
        {
            text-align: center;
            margin: 5px 5px;
            /*background-color: #2e1f1f;
            padding: 6px;
            border: 5px solid #605b5b00;
            border-radius: 9px;
            */
            color: rgb(207, 205, 205);
        }

        .semester 
        {
            flex: 1;
            padding: 15px;
            margin: 10px;
            border: 1px solid #111111;
            border-radius: 4px;
            background-color: #111111;
            min-height: 100px; /* Ensures visible empty boxes */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.9);
        }

        .semester p
        {
            margin-top: 0px;
            text-align: center;
            color: #656363;
            size: 15;
        }

        .footer 
        {
            height: 15%;
            background-color: #605b5b;
            padding: 10px;
        }
    </style>
    
    {{!-- Handlebars Scripting --}}
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script>
      // compile the template
      var template = Handlebars.compile("Handlebars <b>{{doesWhat}}</b>");
      // execute the compiled template and print the output to the console
      console.log(template({ doesWhat: "rocks!" }));
    </script>

    {{!-- Custom Scripting --}}
    {{!<script src="CUDegreePlanner\ProjectSourceCode\src\resources\js\script.js"></script>}}

    {{!-- Jquery Scripting --}}

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.14.1/jquery-ui.js"></script>
    <script>
    $( function() {
        $( "#sortable1, #sortable2" ).sortable({
        connectWith: ".connectedSortable"
        }).disableSelection();
    } );
    </script>
</head>
<body>
    <!-- Sidebar -->
    <div class="container">
        <div class="sidebar">
            <div class="col-md">
        <input type="text" placeholder="Search..." id="course_search" onsubmit="searchForCourse()">
        <ul id="course_search_results" class="connectedSortable">
        {{#each all_courses}}
        {{course_card}}
        {{/each}}
    </ul>
</div>
        </div>

        <!-- Main Content -->
        <div class="main">
            {{#each years}}
            <div class="year">
                <h3>{{this.name}}</h3>
                <div class="semester">
                    <p>Fall</p>
                </div>
                <ul id="{{this.name}}_Fall" class="connectedSortable"></ul>
                <div class="semester">
                    <p>Spring</p>
                </div>
                <ul id="{{this.name}}_Spring" class="connectedSortable"></ul>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Footer -->
    <div class="footer" id="footer-box">
        Semester boxes are currently empty.
    </div>
</body>
</html>
